% set up page numbers, headers and footers
\usepackage{fancyhdr}

\pagestyle{fancy}
\renewcommand{\chaptermark}[1]{ \markboth{\thechapter.\xspace#1}{} }
\renewcommand{\sectionmark}[1]{ \markright{\thesection\xspace#1} }

\fancyhf{} % clear all the header and footer fields
\fancyfoot[C]{\thepage}
\fancyhead[OR]{\nouppercase{\rightmark}} % header for right side (odd)
\fancyhead[EL]{\nouppercase{\leftmark}} % left header for even pages
%\renewcommand{\headrulewidth}{0.5pt} % head rule
%\renewcommand{\footrulewidth}{0pt} % no rule
%\addtolength{\headheight}{0.5pt}
\fancypagestyle{plain}{
  \fancyhf{}
  \renewcommand{\headrulewidth}{0pt}
  \renewcommand{\footrulewidth}{0pt}
  \fancyfoot[C]{\thepage}
}
